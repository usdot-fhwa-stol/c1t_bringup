<launch>
  <node pkg="rviz2" exec="rviz2" name="rviz" args="--display-config $(find-pkg-share nav2_bringup)/rviz/nav2_default_view.rviz"/>
  <include file="$(find-pkg-share c1t_bringup)/launch/turtlebot_sim_localization_launch.xml"/>
  <include file="$(find-pkg-share c1t_bringup)/launch/turtlebot_sim_navigation_launch.xml"/>
  
  <include file="$(find-pkg-share dsrc_driver)/launch/dsrc_driver.py"/>
  <include file="$(find-pkg-share cpp_message)/launch/cpp_message_launch.py"/>

  <node pkg="nav2_lifecycle_manager" exec="lifecycle_manager" name="lifecycle_manager_comms">
    <param name="autostart" value="true"/>
    <param
      name="node_names"
      value="cpp_message_node, dsrc_driver_node"
      value-sep=", "/>
  </node>
</launch>
